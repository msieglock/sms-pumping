{
  "name": "smsguard",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w packages/api",
    "dev:web": "npm run dev -w packages/web",
    "build:api": "npm run build -w packages/api",
    "build:web": "npm run build -w packages/web",
    "build:sdk": "npm run build -w packages/sdk/node",
    "deploy:api": "npm run deploy -w packages/api",
    "deploy:web": "npm run deploy -w packages/web",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint packages --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  }
}
